# Server Configuration
PORT=8090
NODE_ENV=development

# CORS Configuration
# For development, allow all origins. In production, specify exact origins
CORS_ORIGIN=*

# API Security
API_KEY=wws_local_dev_key_123

# Firebase Configuration (Use emulator for local)
FIREBASE_PROJECT_ID=whatzai
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080

# Disable Proxy for Local Development
USE_PROXY=false

# Optional: Bright Data Config (not used when USE_PROXY=false)
BRIGHT_DATA_CUSTOMER_ID=
BRIGHT_DATA_PASSWORD=
BRIGHT_DATA_ZONE=

# Session Storage (local file system)
SESSION_STORAGE_TYPE=local
SESSION_STORAGE_PATH=./sessions

# Logging
LOG_LEVEL=debug

# Memory Management
MAX_CONNECTIONS_PER_INSTANCE=5
CONNECTION_MEMORY_LIMIT_MB=100
# Disable memory threshold check for local development
MEMORY_THRESHOLD=1.0
DISABLE_MEMORY_CHECK=true

# WebSocket Configuration
WS_PORT=8081
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=10000
WS_TOKEN=wws_local_dev_key_123

# Health Monitoring
HEALTH_CHECK_INTERVAL=30000
AUTO_RECOVERY=true
