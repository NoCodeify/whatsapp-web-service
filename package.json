{
  "name": "whatsapp-web-service",
  "version": "1.0.0",
  "description": "WhatsApp Web service using Baileys for DM Champ",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "deploy:dev": "gcloud builds submit --config cloudbuild-dev.yaml --project whatzaidev --region europe-central2",
    "deploy:prod": "echo '⚠️  Production deployment requires manual approval via GitHub Actions' && echo 'Use: gh workflow run deploy.yml --field environment=prod --field confirm_production=true'",
    "deploy:check-dev": "curl -s https://whatsapp-web-service-dev-123456-ew.a.run.app/health | jq",
    "deploy:check-prod": "curl -s https://whatsapp-web-service-prod-123456-ew.a.run.app/health | jq",
    "pre-deploy": "npm run lint && npm run build && npm test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@google-cloud/firestore": "^7.10.0",
    "@google-cloud/pubsub": "^4.3.3",
    "@google-cloud/secret-manager": "^5.5.0",
    "@google-cloud/storage": "^7.8.0",
    "@whiskeysockets/baileys": "^6.7.0",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "https-proxy-agent": "^7.0.6",
    "jimp": "^0.16.13",
    "libphonenumber-js": "^1.11.16",
    "node-cache": "^5.1.2",
    "p-queue": "^8.0.1",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "proxy-agent": "^6.5.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
