# Server Configuration
PORT=8080
NODE_ENV=development

# API Security - Generate secure random keys
API_KEY=your_secure_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=whatzai
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@whatzai.iam.gserviceaccount.com

# Session Storage Configuration
# Options: local (default), hybrid (recommended for production), cloud
SESSION_STORAGE_TYPE=hybrid
# Path for local session storage
SESSION_STORAGE_PATH=./sessions
# Backup interval in milliseconds (5 minutes default)
SESSION_BACKUP_INTERVAL=300000

# Google Cloud Storage (required for hybrid/cloud modes)
STORAGE_BUCKET=whatzai-whatsapp-sessions
GCS_BUCKET=whatzai-whatsapp-sessions

# Session Encryption (required for cloud storage)
# Generate with: openssl rand -hex 32
SESSION_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Bright Data Proxy Configuration
USE_PROXY=true
# Proxy type is hardcoded to 'isp' in the codebase
BRIGHT_DATA_CUSTOMER_ID=your_customer_id_here  # For local dev only
BRIGHT_DATA_ZONE=isp_proxy1  # Your ISP proxy zone name
BRIGHT_DATA_ZONE_PASSWORD=your_zone_password_here
BRIGHT_DATA_HOST=brd.superproxy.io
BRIGHT_DATA_PORT=33335  # ISP proxy port (22225 for residential)

# Credential Management (use Secret Manager in production)
# For local dev only - in production use SECRET variables
BRIGHT_DATA_API_KEY=your_api_key_here_for_local_dev_only
# For production - paths to secrets in Google Secret Manager
BRIGHT_DATA_API_KEY_SECRET=projects/YOUR_PROJECT/secrets/bright-data-api-key/versions/latest
BRIGHT_DATA_CUSTOMER_ID_SECRET=projects/YOUR_PROJECT/secrets/BRIGHT_DATA_CUSTOMER_ID/versions/latest

# Logging
LOG_LEVEL=debug

# Memory Management
MAX_CONNECTIONS_PER_INSTANCE=10
CONNECTION_MEMORY_LIMIT_MB=100

# WebSocket Configuration
WS_PORT=8081
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=10000
WS_TOKEN=your_websocket_token_here